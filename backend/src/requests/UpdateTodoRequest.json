{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "update",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "dueDate": {
      "type": "string",
      "pattern": "^\\d{4}-(0?[1-9]|1[012])-(0?[1-9]|[12][0-9]|3[01])$"
    },
    "done": {
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "dueDate",
    "done"
  ],
  "additionalProperties": false
}
